@{
    ViewData["Title"] = "Mi cuenta";
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        body {
            background-color: #121212;
            color: #f1f1f1;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            background-color: #1e1e1e;
            border-right: 1px solid #2c2c2c;
            height: 100vh;
        }

            .sidebar .nav-link {
                color: #ccc;
                font-weight: 500;
                padding: 12px 16px;
                display: flex;
                align-items: center;
                gap: 10px;
                border-radius: 6px;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: #2a3b58;
                    color: #fff;
                }

        .content {
            padding: 2rem;
            background-color: #181818;
            min-height: 100vh;
        }

        .hidden {
            display: none;
        }

        .content-section {
            animation: fadein 0.3s ease-in-out;
        }
        /* keyframes fadein {
                    from

                {
                    opacity: 0;
                } */

        to {
            opacity: 1;
        }

        }

        .icon {
            font-size: 1.2rem;
        }

        h5 {
            color: #ddd;
        }

        .btn-volver {
            position: absolute;
            right: 30px;
            top: 30px;
            z-index: 999;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 sidebar p-3">
                <h5 class="mb-4">Configuración</h5>
                <nav class="nav flex-column" id="menuSidebar">
                    <a class="nav-link active" href="#" data-target="inicio"><i class="icon bi bi-house-door"></i> Página principal</a>
                    <a href="#" class="nav-link text-light" data-target="infoPersonal">
                        <i class="bi bi-person-badge"></i> Información personal
                    </a>
                    <a class="nav-link" href="#" data-target="seguridad"><i class="icon bi bi-toggle-on"></i> Privacidad</a>
                    <a href="#" class="nav-link text-light" data-target="seguridad">
                        <i class="bi bi-shield-lock"></i> Seguridad
                    </a>
                    <a class="nav-link" href="#" data-target="personas"><i class="icon bi bi-people"></i> Personas y uso compartido</a>
                    <a class="nav-link" href="#" data-target="pagos"><i class="icon bi bi-credit-card"></i> Pagos y suscripciones</a>
                    <a class="nav-link" href="#" data-target="informacion"><i class="bi bi-info-circle"></i> Información</a>
                </nav>
            </div>

            <!-- Contenido -->
            <div class="col-md-9 content position-relative">
                <!-- Botón volver al menú -->
                <a href="/Home/Entrada" class="btn btn-outline-light btn-sm btn-volver">
                    <i class="bi bi-arrow-left-circle"></i> Volver al menú
                </a>

                <!-- Mensajes de bienvenida -->
                @if (TempData["MensajeExito"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["MensajeExito"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["MensajeLogin"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        @TempData["MensajeLogin"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div id="inicio" class="content-section">👋 Bienvenido a la página principal de tu cuenta.</div>
                <div id="infoPersonal" class="content-section hidden">
                    <div id="contenido-infoPersonal"></div>
                </div>
                <div id="seguridad" class="content-section hidden">
                    <div id="contenido-seguridad"></div>
                </div>
                <div id="personas" class="content-section hidden">👥 Administra el acceso y uso compartido con otras personas.</div>
                <div id="pagos" class="content-section hidden">💳 Consulta tus métodos de pago y suscripciones.</div>
                <div id="informacion" class="content-section hidden">ℹ️ Más información sobre tu cuenta y soporte.</div>
            </div>
        </div>
    </div>

    <script>
        const links = document.querySelectorAll("#menuSidebar .nav-link");
        const sections = document.querySelectorAll(".content-section");

        links.forEach(link => {
            link.addEventListener("click", (e) => {
                e.preventDefault();
                links.forEach(l => l.classList.remove("active"));
                link.classList.add("active");
                sections.forEach(section => section.classList.add("hidden"));
                const target = link.getAttribute("data-target");
                const sectionToShow = document.getElementById(target);
                if (sectionToShow) sectionToShow.classList.remove("hidden");
                if (target === "infoPersonal") {
                    fetch('/Home/InformacionPersonal')
                        .then(response => response.text())
                        .then(html => {
                            document.getElementById("contenido-infoPersonal").innerHTML = html;
                        });
                } else if (target === "seguridad") {
                    fetch('/Home/Seguridad')
                        .then(response => response.text())
                        .then(html => {
                            document.getElementById("contenido-seguridad").innerHTML = html;
                        });
                }
            });
        });
    </script>
</body>
</html>
