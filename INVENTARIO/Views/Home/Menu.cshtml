@* Menu.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>MiTienda - Panel Principal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }

        .navbar {
            background-color: #1f1f1f;
        }

        .navbar-brand, .nav-link, .dropdown-item {
            color: #ffffff !important;
        }

            .nav-link.active {
                color: #0d6efd !important;
            }

        .btn-outline-success {
            border-color: #0d6efd;
            color: #0d6efd;
        }

            .btn-outline-success:hover {
                background-color: #0d6efd;
                color: #ffffff;
            }

        .dropdown-menu {
            background-color: #1f1f1f;
        }

        .dropdown-item:hover {
            background-color: #343a40;
        }

        .carousel-caption {
            background: rgba(0, 0, 0, 0.6);
            padding: 1rem;
            border-radius: 10px;
        }

        .carousel-item img {
            object-fit: cover;
            height: 400px;
            width: 100%;
            filter: brightness(0.6);
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">MiTienda</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuTienda">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menuTienda">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inventario" asp-action="Inventario">Inventario</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Configuracion">Configuración</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Más Opciones
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Reportes</a></li>
                            <li><a class="dropdown-item" href="#">Clientes</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Configuración</a></li>
                        </ul>
                    </li>
                </ul>

                <form class="d-flex me-2">
                    <input class="form-control me-2 bg-dark text-white border-secondary" type="search" placeholder="Buscar...">
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                </form>

                <!-- USUARIO DROPDOWN -->
                <div class="dropdown">
                    <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" id="dropdownUsuario" data-bs-toggle="dropdown" aria-expanded="false">
                        JoseUsuario
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownUsuario">
                        <li><a class="dropdown-item" href="#" id="verInformacion">Información</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Logins" asp-action="CerrarSesion">Cerrar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- CARRUSEL -->
    <div id="carruselTienda" class="carousel slide mt-4" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carruselTienda" data-bs-slide-to="0" class="active"></button>
            <button type="button" data-bs-target="#carruselTienda" data-bs-slide-to="1"></button>
            <button type="button" data-bs-target="#carruselTienda" data-bs-slide-to="2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/css/img/ñññ.jpg">
                <div class="carousel-caption">
                    <h5>Bienvenido a MiTienda</h5>
                    <p>Explora los mejores productos tecnológicos.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/css/img/kk.jpg">
                <div class="carousel-caption">
                    <h5>Gestión de inventario</h5>
                    <p>Agrega y administra tu inventario fácilmente.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/css/img/j.jpg">
                <div class="carousel-caption">
                    <h5>Carrito de Compras</h5>
                    <p>Compra rápida y segura en un solo lugar.</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carruselTienda" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carruselTienda" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Contenedor para mostrar la información del usuario -->
    <div id="infoPersonalContainer" class="container mt-4 d-none">
        <div id="contenido-infoPersonal" class="bg-dark text-white p-4 rounded shadow"></div>
    </div>

    <!-- Bootstrap y lógica -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById("verInformacion").addEventListener("click", function (e) {
            e.preventDefault();

            fetch('/Home/InformacionPersonal')
                .then(response => {
                    if (!response.ok) throw new Error("Error al cargar datos.");
                    return response.text();
                })
                .then(html => {
                    const container = document.getElementById("infoPersonalContainer");
                    document.getElementById("contenido-infoPersonal").innerHTML = html;
                    container.classList.remove("d-none");
                    container.scrollIntoView({ behavior: 'smooth' });
                })
                .catch(err => alert("No se pudo cargar la información del usuario."));
        });
    </script>

</body>
</html>
