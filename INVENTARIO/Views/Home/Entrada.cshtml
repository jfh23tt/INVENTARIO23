@model IEnumerable<ProductoModel>
@{
    ViewBag.Title = "Panel Principal - MiTienda";
    var nombreUsuario = TempData["NombreUsuario"] ?? "Usuario";
    var mensajeExito = TempData["MensajeExito"];
    var mensajeError = TempData["MensajeError"];
    var rolUsuario = TempData["RolUsuario"]?.ToString() ?? "Cliente"; // 👈 rol actual
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />

    <style>
        body {
            background-color: #121212;
            color: #ffffff;
        }

        .navbar {
            background-color: #1f1f1f;
        }

        .navbar-brand, .nav-link, .dropdown-item {
            color: #ffffff !important;
        }

            .nav-link.active {
                color: #0d6efd !important;
            }

        .btn-outline-success {
            border-color: #0d6efd;
            color: #0d6efd;
        }

            .btn-outline-success:hover {
                background-color: #0d6efd;
                color: #ffffff;
            }

        .dropdown-menu {
            background-color: #1f1f1f;
        }

        .dropdown-item:hover {
            background-color: #343a40;
        }

        .carousel-caption {
            background: rgba(0, 0, 0, 0.6);
            padding: 1rem;
            border-radius: 10px;
        }

        .carousel-item img {
            object-fit: cover;
            height: 400px;
            width: 100%;
            filter: brightness(0.6);
        }

        .card {
            background-color: #1f1f1f;
            color: #fff;
            border: 1px solid #333;
        }
    </style>
</head>
<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Menu">MiTienda</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menuTienda">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menuTienda">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>

                    @if (rolUsuario == "Administrador")
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Inventario" asp-action="Inventario">Inventario</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Gestión</a>
                            <ul class="dropdown-menu">
                                <li><a asp-controller="Producto" asp-action="Producto" class="dropdown-item">Añadir productos</a></li>
                                <li><a asp-action="Proveedores" asp-controller="Proveedor" class="dropdown-item">Proveedor</a></li>
                                <li><a asp-action="Compras" asp-controller="Compra" class="dropdown-item">Compra</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reportes" asp-action="Index">Reportes</a>
                        </li>
                    }
                </ul>

                <form class="d-flex me-2">
                    <input class="form-control me-2 bg-dark text-white border-secondary" type="search" placeholder="Buscar...">
                    <button class="btn btn-outline-success" type="submit">Buscar</button>
                </form>

                <!-- USUARIO DROPDOWN -->
                <div class="dropdown">
                    <a class="btn btn-outline-primary dropdown-toggle" href="#" id="dropdownUsuario" data-bs-toggle="dropdown">
                        @nombreUsuario (@rolUsuario)
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item text-danger" asp-controller="Home" asp-action="Configuracion"> Configuracion</a></li>
                        @* <li><a class="dropdown-item" href="#" id="verInformacion">Información</a></li> *@
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Logins" asp-action="CerrarSesion">Cerrar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- ALERTAS -->
    <div class="container mt-3">
        @if (mensajeExito != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @mensajeExito
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (mensajeError != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @mensajeError
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
    </div>

    <!-- CARRUSEL -->
    <div id="carruselTienda" class="carousel slide mt-4" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/css/img/ñññ.jpg" class="d-block w-100" alt="Bienvenido">
                <div class="carousel-caption">
                    <h5>Bienvenido, @nombreUsuario</h5>
                    <p>Explora los mejores productos tecnológicos.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/css/img/kk.jpg" class="d-block w-100" alt="Inventario">
                <div class="carousel-caption">
                    <h5>Gestión de inventario</h5>
                    <p>Agrega y administra tu inventario fácilmente.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/css/img/j.jpg" class="d-block w-100" alt="Carrito">
                <div class="carousel-caption">
                    <h5>Carrito de Compras</h5>
                    <p>Compra rápida y segura en un solo lugar.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- PRODUCTOS -->
    <div class="container mt-5">
        <h3 class="mb-4">Nuestros Productos</h3>
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card shadow-sm">
                        <img src="@producto.urlimagen" class="card-img-top" alt="@producto.Nombre" />
                        <div class="card-body">
                            <h5 class="card-title">@producto.Nombre</h5>
                            <p class="card-text">@producto.Descripcion</p>
                            <p><strong>Marca:</strong> @producto.Marca</p>
                            <p><strong>Precio:</strong> @producto.Precio</p>

                            <a href="#" class="btn btn-primary">Comprar</a>
                            <button type="button" class="btn btn-danger btnna" data-id="@producto.Id">Ver más</button>

                            <form asp-action="Agregar" asp-controller="Carrito" method="post" class="mt-2">
                                <input type="hidden" name="Id" value="@producto.Id" />
                                <input type="number" name="cantidad" value="1" min="1" class="form-control my-2" />
                                <button class="btn btn-success btn-sm">Ir al carrito</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Modal Detalle Producto -->
    <div class="modal fade" id="modalprod" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header">
                    <h4 class="modal-title">Información del producto</h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalBody">Cargando...</div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- INFO PERSONAL -->
    <div id="infoPersonalContainer" class="container mt-4 d-none">
        <div id="contenido-infoPersonal" class="bg-dark text-white p-4 rounded shadow"></div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>
    <script>
        // Info personal AJAX
        document.getElementById("verInformacion").addEventListener("click", function (e) {
            e.preventDefault();
            fetch('@Url.Action("InformacionPersonal", "Home")')
                .then(r => r.ok ? r.text() : Promise.reject())
                .then(html => {
                    document.getElementById("contenido-infoPersonal").innerHTML = html;
                    document.getElementById("infoPersonalContainer").classList.remove("d-none");
                    document.getElementById("infoPersonalContainer").scrollIntoView({ behavior: 'smooth' });
                })
                .catch(() => alert("No se pudo cargar la información del usuario."));
        });

        // Modal producto AJAX
        $(document).on('click', '.btnna', function () {
            $('#modalprod').modal('show');
            var id = parseInt($(this).data("id"));
            $.ajax({
                url: '/Producto/DetalleProducto',
                type: 'GET',
                data: { id: id },
                success: function (data) {
                    if (data) {
                        const contenido = `
                            <div class="d-flex align-items-center">
                                <img class="w-50" src="${data.urlimagen}" />
                                <div class="ms-3">
                                    <p><strong>Nombre:</strong> ${data.nombre}</p>
                                    <p><strong>Marca:</strong> ${data.marca}</p>
                                    <p><strong>Descripción:</strong> ${data.descripcion}</p>
                                    <p><strong>Precio:</strong> ${data.precio}</p>
                                </div>
                            </div>`;
                        $('#modalBody').html(contenido);
                    } else {
                        $('#modalBody').html('No se encontró el producto.');
                    }
                },
                error: function () {
                    $('#modalBody').html('Error al cargar los datos');
                }
            });
        });
    </script>
</body>
</html>
