@model Registrarse

@{
    ViewData["Title"] = "Registrarse";
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #2c3e50;
        }

        .bg {
            background-image: url('/css/img/VERDU.jpg'); /* ← Mismo estilo que el login */
            background-position: center center;
            background-size: cover;
        }

        .form-wrapper {
            background-color: white;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

            .form-wrapper label {
                color: #333;
            }

            .form-wrapper input,
            .form-wrapper select {
                background-color: #f9f9f9;
                color: #000;
                border: 1px solid #ccc;
            }

                .form-wrapper input::placeholder {
                    color: #999;
                }

            .form-wrapper a {
                color: #0d6efd;
            }
    </style>
</head>
<body>
    <div class="container mt-5 shadow form-wrapper">
        <div class="row align-items-stretch">
            <!-- Lado izquierdo con imagen -->
            <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6"></div>

            <!-- Lado derecho con formulario -->
            <div class="col p-5">
                <h2 class="fw-bold text-center py-4">Regístrate</h2>
                <form asp-action="Registrase" asp-controller="Datos">
                    <div class="mb-3">
                        <label asp-for="TipoC" class="form-label">Tipo De cedula</label>
                        <select asp-for="TipoC" class="form-control" asp-items="Html.GetEnumSelectList<TipoC>()"></select>
                        <span asp-validation-for="TipoC" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Identificación</label>
                        <input type="number" asp-for="Identificacion" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Apellido</label>
                        <input asp-for="Apellido" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Teléfono</label>
                        <input type="number" asp-for="Telefono" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Rol" class="form-label">Rol</label>
                        <select asp-for="Rol" class="form-control" asp-items="Html.GetEnumSelectList<Rol>()"></select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Correo</label>
                        <input asp-for="Correo" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        <input asp-for="Contraseña" type="password" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Fecha de Nacimiento</label>
                        <input asp-for="Fechadenacimiento" type="date" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Tiposexo" class="form-label">Sexo</label>
                        <select asp-for="Tiposexo" class="form-control" asp-items="Html.GetEnumSelectList<Tiposexo>()"></select>
                        <span asp-validation-for="Tiposexo" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Registrarse</button>
                    </div>
                    <div class="my-3 text-center">
                        <a href="/Login/Iniciar">¿Ya tienes cuenta? Inicia sesión</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
