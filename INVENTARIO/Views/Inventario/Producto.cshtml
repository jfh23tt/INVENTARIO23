@model ProductoModel

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">📦 Registro de Productos</h3>
                </div>
                <div class="card-body">

                    <!-- Mensajes de éxito / error -->
                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-success">@TempData["Mensaje"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="GuardarProducto" asp-controller="Producto" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Codigo" class="form-label">Código</label>
                                <input type="text" asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Nombre" class="form-label">Nombre</label>
                                <input type="text" asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Marca" class="form-label">Marca</label>
                                <input type="text" asp-for="Marca" class="form-control" />
                                <span asp-validation-for="Marca" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Unidades" class="form-label">Unidades</label>
                                <input type="number" asp-for="Unidades" class="form-control" />
                                <span asp-validation-for="Unidades" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Precio" class="form-label">Precio Venta</label>
                                <input type="number" step="0.01" asp-for="Precio" class="form-control" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="estado" class="form-label">Estado</label>
                                <select class="form-select" asp-for="estado" asp-items="Html.GetEnumSelectList<Estado>()"></select>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="Descripcion" class="form-label">Descripción</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger"></span>
                            </div>

                            <div class="col-md-12">
                                <label asp-for="ImageFile" class="form-label">Imagen del Producto</label>
                                <input type="file" class="form-control" asp-for="urlimagen" />
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4 d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">
                                 Guardar
                            </button>

                            <a asp-action="Entrada" asp-controller="Home" class="btn btn-secondary px-4">
                                 Volver al menu
                            </a>

                            <form asp-action="pdfp" asp-controller="pdfp" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger px-4">
                                    Generar PDF
                                </button>
                            </form>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
